
@{
    ViewBag.Title = "Thêm mới kích thước";
    var unitOfSizes = ViewData["UnitOfSize"] as IEnumerable<UnitOfSizeModelDetail>;
}
@using DOMAIN.Models
@using COMMON.Helper
@model Size

@section JsFooter{
    
}

<div class="right_col" role="main">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Thêm mới <small>kích thước</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <form data-parsley-validate class="form-horizontal form-label-left" action="/Size/CreateNew" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Đợn vị tính <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.DropDownList("Unit", new SelectList(unitOfSizes, "Name", "Name", Model.Unit), "--Chọn đơn vị tính--", new { @class = "form-control", required = "required" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 col-sm-3 col-xs-12 control-label">
                                Chiều rộng <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="number" step="any" min="0" value="@Model.Width" name="Width" class="form-control" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 col-sm-3 col-xs-12 control-label">
                                Chiều dài <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="number" step="any" min="0" value="@Model.Height" name="Height" class="form-control" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-4">
                                Trạng thái <span class="required"></span>
                            </label>
                            <div class="col-md-1 col-sm-1 col-xs-3">
                                @Html.CheckBox("Status", Model.Status, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button type="button" class="btn btn-primary" id="btnCancel" onclick="location.href='/Size'">Hủy</button>
                                <button type="submit" class="btn btn-success">Lưu</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

