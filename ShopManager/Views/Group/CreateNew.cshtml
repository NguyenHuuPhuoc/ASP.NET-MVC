@{
    ViewBag.Title = "Thêm mới nhóm người dùng";
}
@using ShopManager.Models
@model GroupModelDetail
@section JsFooter{
    <script>
        function funcCancel() {
            location.href = "/Group/Index";
        }
    </script>
}
<form data-parsley-validate class="form-horizontal form-label-left" action="/Group/CreateNew" method="post">
    <div class="right_col" role="main">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Thêm mới <small>nhóm người dùng</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Tên nhóm <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.TextBoxFor(Model => Model.Group.Name, new { @required = "required", @class = "form-control col-md-7 col-xs-12", Maxlength = "128" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Mô tả chung <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.TextAreaFor(Model => Model.Group.Descreption, new { @required = "required", @class = "form-control col-md-7 col-xs-12", Maxlength = "256" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Trạng thái <span class="required"></span>
                            </label>
                            <div class="col-md-1 col-sm-11 col-xs-12">
                                @Html.CheckBoxFor(Model => Model.Group.Status, new { @class = "form-control col-md-7 col-xs-12" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button type="button" class="btn btn-primary" id="btnCancel" onclick="funcCancel()">Hủy</button>
                                <button type="submit" class="btn btn-success">Lưu</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                @Html.HiddenFor(Model => Model.Roles[i].Id)
                @Html.HiddenFor(Model => Model.Roles[i].Descreption)
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="col-lg-10 col-md-10 col-sm-10 col-xs-10 control-label">@Model.Roles[i].Descreption</label>
                        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                            @Html.CheckBoxFor(Model => Model.Roles[i].IsCheck, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</form>

